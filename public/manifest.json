{
  "manifest_version": 2,
  "name": "Split Screen",
  "version": "1.0.0",
  "version_name": "beta",
  "browser_action": {
    "default_icon": {
      "16": "img/16.png",
      "48": "img/48.png",
      "128": "img/128.png"
    },
    // 图标悬停时的标题，可选
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "128": "img/128.png"
  },
  // 多语言配置
  // "default_locale": "en",
  "description": "A simple split-screen plug-in",
  "author": "ZhiCheng Ran",
  // 会一直常驻的后台JS
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "打开popup"
    }
  },
  "file_system_provider_capabilities": {
    "configurable": true,
    "multiple_mounts": true,
    "source": "network"
  },
  "homepage_url": "https://github.com/susanforme/split",
  // "key": "publicKey",
  "minimum_chrome_version": "45",
  "offline_enabled": true,
  "permissions": [
    "*://*/*",
    "contextMenus", // 右键菜单
    "tabs", // 标签
    "notifications", // 通知
    "storage", // 存储
    "webRequest", // web请求
    "webRequestBlocking"
  ],
  "short_name": "Short Name",
  // 存储
  "storage": {
    "managed_schema": "schema.json"
  },
  "update_url": "https://path/to/updateInfo.xml",
  // 普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的
  "web_accessible_resources": [
    "./js/inject.js",
    "./home.html"
  ],
  "background": {
    "page": "/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js"
      ]
    }
  ]
}